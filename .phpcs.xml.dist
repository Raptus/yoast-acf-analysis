<?xml version="1.0"?>
<ruleset name="Yoast SEO ACF Analysis">
	<description>Yoast SEO ACF Analysis Coding Standards</description>

	<file>.</file>

	<arg name="extensions" value="php"/>
	<arg value="sp"/>

	<exclude-pattern>vendor/*</exclude-pattern>
	<exclude-pattern>tests/*</exclude-pattern>
	<exclude-pattern>node_modules/*</exclude-pattern>
	<exclude-pattern>languages/*</exclude-pattern>

	<!-- ##### WordPress sniffs #####-->
	<rule ref="WordPress">
		<!-- Catches way too many things, like vars and file headers. -->
		<exclude name="Generic.Commenting.DocComment.MissingShort"/>

		<!-- Namespacing hooks sound reasonable. -->
		<exclude name="WordPress.NamingConventions.ValidHookName.UseUnderscores"/>

		<!-- Exclude WP filename rules for the time being. YoastCS 0.5 will solve this better. -->
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
	</rule>

	<rule ref="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseBrace">
		<exclude-pattern>*/yoast-acf-analysis\.php$</exclude-pattern>
	</rule>

	<!-- exclude the 'empty' index files from some documentation checks -->
	<rule ref="Squiz.Commenting.FileComment">
		<exclude-pattern>*/index.php</exclude-pattern>
	</rule>

	<rule ref="Squiz.Commenting">
		<exclude name="Squiz.Commenting.FileComment.Missing"/>
	</rule>

</ruleset>
